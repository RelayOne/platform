{
  "name": "@relay/auth-middleware",
  "version": "1.0.0",
  "description": "Shared authentication middleware for Relay Platform Hono applications",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./jwt": {
      "import": "./dist/jwt.js",
      "types": "./dist/jwt.d.ts"
    },
    "./session": {
      "import": "./dist/session.js",
      "types": "./dist/session.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "hono": "^4.6.0",
    "jose": "^5.2.0",
    "@relay/errors": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "hono": "^4.0.0"
  },
  "keywords": [
    "relay",
    "platform",
    "auth",
    "middleware",
    "hono",
    "jwt",
    "authentication"
  ],
  "author": "Terragon Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/RelayOne/platform.git",
    "directory": "packages/auth-middleware"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
