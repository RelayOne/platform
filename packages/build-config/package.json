{
  "name": "@relay/build-config",
  "version": "1.0.0",
  "description": "Shared build configurations for Relay Platform packages",
  "type": "module",
  "main": "./src/index.js",
  "types": "./src/index.d.ts",
  "exports": {
    ".": {
      "import": "./src/index.js",
      "types": "./src/index.d.ts"
    },
    "./tsup": {
      "import": "./src/tsup.js",
      "types": "./src/tsup.d.ts"
    },
    "./vitest": {
      "import": "./src/vitest.js",
      "types": "./src/vitest.d.ts"
    }
  },
  "files": [
    "src"
  ],
  "keywords": [
    "relay",
    "platform",
    "build",
    "config",
    "tsup",
    "vitest"
  ],
  "author": "Terragon Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/RelayOne/platform.git",
    "directory": "packages/build-config"
  },
  "peerDependencies": {
    "tsup": "^8.0.0",
    "vitest": "^1.0.0"
  },
  "peerDependenciesMeta": {
    "tsup": {
      "optional": true
    },
    "vitest": {
      "optional": true
    }
  }
}
