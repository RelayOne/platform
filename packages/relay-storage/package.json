{
  "name": "@relay/storage",
  "version": "1.0.0",
  "description": "S3-compatible cloud storage with support for AWS S3, DigitalOcean Spaces, and local filesystem",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "^25.0.7",
    "tsup": "^8.0.2",
    "typescript": "^5.4.0"
  },
  "keywords": [
    "relay",
    "platform",
    "storage",
    "s3",
    "digitalocean-spaces",
    "aws-s3",
    "file-storage"
  ],
  "author": "Terragon Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/RelayOne/platform.git",
    "directory": "packages/relay-storage"
  }
}
